<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScoreActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#040147">

        <TextView
            android:layout_width="59dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="489dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SCORE"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <ImageView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="backToMenu"
            app:srcCompat="@drawable/close_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:background="#2BCCD7"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="369dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/cup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txtQuizScore"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:onClick="clickQuizScore"
                    app:srcCompat="@drawable/quiz" />

                <ImageView
                    android:id="@+id/txtListenScore"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:onClick="clickListening"
                    app:srcCompat="@drawable/listening" />

                <ImageView
                    android:id="@+id/txtVocaScore"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:onClick="clickVocabulary"
                    app:srcCompat="@drawable/wordgame" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtScoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Scorename" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/textview_title_border_score"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtScoreTitle"
                    android:layout_width="213dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Highest Score"
                    android:textColor="@android:color/black"

                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="50"
                    android:textColor="@android:color/black"
                    android:textSize="35sp"


                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>