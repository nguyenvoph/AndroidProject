<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListeningActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#040147">

        <TextView
            android:layout_width="69dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="469dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="LISTEN"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="backToMenu"
            app:srcCompat="@drawable/close_icon" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:background="#2BCCD7"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/countdown" />

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="---:--"
                android:textColor="#ffffff"
                android:textSize="28dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="playMedia"
                app:srcCompat="@drawable/play" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:progressBackgroundTint="@android:color/black"
                />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="28dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/star" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2BCCD7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/textview_title_border"
                        android:gravity="center"
                        android:text="Total: 50"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/txtCurrent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/textview_title_border"
                        android:gravity="center"
                        android:text="Current: 50"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="88dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_bg_round"
                        android:text="Next" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="366dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/notebook" />

                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="280dp"
                    android:layout_height="210dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textSize="23dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/button_bg_round"
                    android:text="A"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/button_bg_round"
                    android:text="B"
                    android:textSize="35dp" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/button_bg_round"
                    android:text="C"
                    android:textSize="35dp" />

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_bg_round"
                    android:text="D"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>